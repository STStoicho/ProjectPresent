@page
@model LoginModel

<style>
    body 
    {
        background-image: url(https://cdn.pixabay.com/photo/2018/08/06/10/22/gift-3587240_1280.jpg);    
        background-repeat: no-repeat;
        background-size: cover;
        font-family: 'Comic Sans MS';
    }
    #image
    {
        position: absolute;
        z-index: -5;
        -webkit-filter: blur(2px);
        width: 99%;
        height: 100%;
    }
    .row
    {
        display: flex;
        flex-direction: column;
        align-items: center;
        border-radius: 8px;
        box-shadow: 3px 3px 3px 1px;
        width: 460px;
        background-color: rgba(255, 255, 255, 0.7);
        margin-left: auto;
        margin-right: auto;
    }
    #Logintext {
        text-align: center;
    }
    .col-md-4
    {
        width: 400px;
    }
    .links
    {
        text-decoration: none;
    }
    .buttonlogin
    {
        width: 380px;
        height: 60px;
        border-radius: 8px;
        background-color: deepskyblue;
        transition: all 0.2s ease-out;
        font-size: 20px;
    }
    .buttonlogin:hover 
    {
        background-color: dodgerblue;
        color: white;
        transition: all 0.2s ease-out;
    }
</style>

<br>
<br>
<br>
<br>
<br>

<div class="row">
    <br>
    <div id="Logintext">
        @{
            ViewData["Title"] = "Вход";
        }

        <h1>@ViewData["Title"]</h1>
        <br>
    </div>
    <div class="col-md-4">
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.UserName" class="form-label">Username</label>
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" type="password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Парола</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        Запомни ме?
                    </label>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" class="links" asp-page="./ForgotPassword">Забравена парола?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" class="links" asp-route-returnUrl="@Model.ReturnUrl">Нямаш профил?</a>
                    </p>
                </div>
                <br>
                <div>
                    <button id="login-submit" type="submit" class="buttonlogin">Вход</button>
                </div>
            </form>
    </div>
    <br>
</div>
<br>
<br>
<br>
<br>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
