@model ProjectPresents.Data.Present

@{
    ViewData["Title"] = "Details";
}

<br>
<h1 style="text-align: center">Детайли на подаръка</h1>
<br>

<style>
    body
    {
        background: radial-gradient(circle, rgba(255,107,110,1) 50%, rgba(255,182,182,1) 100%);
        font-family: 'Comic Sans MS';
    }
    #image 
    {
        margin: 15px;
        border-radius: 8px;
        box-shadow: 3px 3px 3px 1px;
        width: 440px;
        height: 435px;
        color: black;
    }

    @@media screen and (max-width: 770px) 
    {
        #image {
            width: 540px;
            height: 535px;
        }
    }
    .presentText 
    {
        font-size: 27px;
        margin-top: 50px;
        margin-left: 15px;
        width: 800px;
    }

    @@media screen and (max-width: 1200px) 
    {
        .presentText {
            font-size: 22px;
        }
    }

    @@media screen and (max-width: 1100px) 
    {
        .presentText 
        {
            width: 300px;
        }
    }

    @@media screen and (max-width: 770px) 
    {
        .presentText 
        {
            margin-top: 5px;
        }
    }

    .buttonEdit 
    {
        width: 180px;
        height: 80px;
        margin-left: 15px;
        border-radius: 8px;
        background-color: lightskyblue;
        transition: all 0.2s ease-out;
        font-size: 20px;
    }
    .buttonEdit:hover 
    {
        background-color: deepskyblue;
        color: white;
        transition: all 0.2s ease-out;
    }
    .buttonBack 
    {
        width: 180px;
        height: 80px;
        margin-left: 15px;
        border-radius: 8px;
        background-color: lightskyblue;
        transition: all 0.2s ease-out;
    }
    .buttonBack:hover {
        background-color: deepskyblue;
        color: white;
        transition: all 0.2s ease-out;
    }
    .buttonDel 
    {
        width: 180px;
        height: 80px;
        border-radius: 8px;
        background-color: red;
        margin-left: 15px;
        transition: all 0.2s ease-out;
        font-size: 20px;
    }
    .buttonDel:hover 
    {
        transition: all 0.2s ease-out;
        color: white;
        background-color: #CE0000;
    }
    #ccount 
    {
        width: 200px;
        border-radius: 8px;
    }
    #buttonOrder 
    {
        width: 130px;
        height: 55px;
        border-radius: 8px;
        transition: all 0.2s ease-out;
    }
    #buttonOrder:hover 
    {
        transition: all 0.2s ease-out;
        background-color: lightgray;
    }
    #Order
    {
        margin-left: 250px;
        font-size: 22px;
    }

    @@media screen and (max-width: 1150px) 
    {
        #Order 
        {
            margin-left: 150px;
        }
    }

    @@media screen and (max-width: 980px) 
    {
        #Order 
        {
            margin-left: 10px;
        }
    }

    @@media screen and (max-width: 770px) 
    {
        #Order 
        {
            position: absolute;
            margin-top: 80px;
            margin-left: 130px;
        }
    }

    #everything
    {
        display: flex;
        flex-direction: row;
    }

    @@media screen and (max-width: 770px) 
    {
        #everything 
        {
            display: flex;
            flex-direction: column;
        }
    }
</style>

<div id="everything">
    <div>
        <img id="image" src="@Html.DisplayFor(model => model.Image)" />
    </div>
    <div>
        <div class="presentText">
            <b>Име: </b>@Html.DisplayFor(model => model.Name)
            <br>
            <b>Каталожен номер: </b>@Html.DisplayFor(model => model.CatalogNum)
            <br>
            <b>Категория: </b>@Html.DisplayFor(model => model.Categories.Name)
            <br>
            <b>Приложение: </b>@Html.DisplayFor(model => model.Aplieds.Name)
            <br>
            <b>Описание: </b>@Html.DisplayFor(model => model.Description)
            <br>
            <b>Цена: </b>@Html.DisplayFor(model => model.Price) лв.
            <br>
            <b>Дата: </b>@Html.DisplayFor(model => model.DateUpdate)
        </div>
    </div>
</div>
<br>
<div style="display: flex; flex-direction:row; justify-content: space-between">
    <div>
        <a asp-action="Index">
            <button class="buttonBack">Предишна страница</button>
        </a>
    </div>
    <div>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Edit" asp-route-id="@Model?.Id">
                <button class="buttonEdit">Промени</button>
            </a>
        }
    </div>
    <div>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Delete" asp-route-id="@Model?.Id">
                <button class="buttonDel">Премахни</button>
            </a>
        }
    </div>
    <div id="Order">
        <form method="get" asp-controller="Orders" asp-action="CreateWithPresentId" asp-route-presentId="@Model?.Id">
            <b style="font-family:'Comic Sans MS'">Броя:</b>
            <br>
            <input name="presentId" type="hidden" value="@Model?.Id" />
            <input name="countP" id="ccount" type="number" value="1" style="color:black; font:bold" />
            <input id="buttonOrder" type="submit" value="Поръчай" />
        </form>
    </div>
</div>
<br>
<br>
<br>
