@model ProjectPresents.Data.Present

@{
    ViewData["Title"] = "Създаване на подарък";
}

<style>
    body 
    {
        background: linear-gradient(180deg, rgba(255,255,255,1) 5%, rgba(255,107,110,1) 100%);
        font-family: 'Comic Sans MS';
    }

    .row 
    {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .form-control 
    {
        border-radius: 6px;
    }

    .buttonBack 
    {
        width: 180px;
        height: 60px;
        border-radius: 8px;
        background-color: lightskyblue;
        transition: all 0.2s ease-out;
    }
    .buttonBack:hover 
    {
        background-color: deepskyblue;
        color: white;
        transition: all 0.2s ease-out;
    }

    .buttonCreate 
    {
        width: 180px;
        height: 60px;
        border-radius: 8px;
        background-color: lightskyblue;
        transition: all 0.2s ease-out;
    }
    
    .buttonCreate:hover 
    {
        background-color: deepskyblue;
        color: white;
        transition: all 0.2s ease-out;
    }
    #image 
    {
        margin-left: 425px;
        margin-top: 40px;
        position: absolute;
        border-radius: 8px;
        box-shadow: 2px 2px 2px 1px;
        width: 140px;
        height: 135px;
        transition: all 0.2s ease-out;
        color: black;
    }

    @@media screen and (max-width: 1200px) 
    {
        #image 
        {
            margin-left: 325px;
            margin-top: 40px;
        }
    }

    @@media screen and (max-width: 974px) 
    {
        #image 
        {
            margin-left: 225px;
            margin-top: 40px;
        }
    }
    @@media screen and (max-width: 770px) 
    {
        #image 
        {
            margin-left: 190px;
            margin-top: 190px;
        }
    }

    #buttons
    {
        display: flex;
        justify-content: space-between;

    }

    @@media screen and (max-width: 1200px) 
    {
        #buttons 
        {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
    }
    @@media screen and (max-width: 770px) 
    {
        #buttons 
        {
            display: flex;
            flex-direction: row;
        }
    }
</style>

<br>
<h1 style="text-align: center">Създаване на нов подарък</h1>
<br>
<br>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CatalogNum" class="control-label">Каталожен номер</label>
                <input asp-for="CatalogNum" class="form-control" />
                <span asp-validation-for="CatalogNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Име</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriesId" class="control-label">Категория</label>
                <select asp-for="CategoriesId" class="form-control" asp-items="ViewBag.CategoriesId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ApliedsId" class="control-label">Приложение</label>
                <select asp-for="ApliedsId" class="form-control" asp-items="ViewBag.ApliedsId"></select>
            </div>
            <img id="image" />
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Снимка (Url)</label>
                <input oninput="changeImage()" id="imageText" asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Цена</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <br>
            <div id="buttons">
                <a asp-action="Index"><input type="button" value="Предишна страница" class="buttonBack" /></a>
                <input type="submit" value="Създаване" class="buttonCreate" />
            </div>
        </form>
    </div>
</div>
<br>
<br>

<script>
    function changeImage() 
    {
        var i = document.getElementById('image');
        var it = document.getElementById('imageText');
        i.src = it.value;
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
