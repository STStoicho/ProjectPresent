@model IEnumerable<ProjectPresents.Data.Order>

@{
    ViewData["Title"] = "Поръчки";
}

<br>
<h1 style="text-align: center">Пазарска кошница</h1>

<style>
    body
    {
        background: linear-gradient(180deg, rgba(255,255,255,1) 0%, rgba(151,232,255,1) 100%);
        font-family: 'Comic Sans MS';
    }
    .order 
    {
        background-color: #46B6E0;
        border-radius: 12px;
        font-size: 18px;
        box-shadow: 3px 3px 3px 1px;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    @@media screen and (max-width: 990px) 
    {
        .order 
        {
            height: 380px;
            width: 750px;
            justify-content: normal;
        }
    }

    #image 
    {
        margin: 15px;
        border-radius: 8px;
        box-shadow: 3px 3px 3px 1px;
        width: 190px;
        height: 180px;
        color: black;
    }
    .buttonDel 
    {
        margin: 10px;
        width: 180px;
        height: 80px;
        border-radius: 8px;
        background-color: red;
        transition: all 0.2s ease-out;
    }
    .buttonDel:hover 
    {
        transition: all 0.2s ease-out;
        color: white;
        background-color: #CE0000;
    }
    .buttonEdit
    {
        margin: 10px;
        width: 180px;
        height: 80px;
        border-radius: 8px;
        background-color: lightskyblue;
        transition: all 0.2s ease-out;
    }
    .buttonEdit:hover 
    {
        transition: all 0.2s ease-out;
        color: white;
        background-color: deepskyblue;
    }
    .orderText
    {
        margin-left: 10px;
        width: 820px;
        margin-top: 80px;
        font-size: 18px;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    @@media screen and (max-width: 990px) 
    {
        .orderText
        {
            position: absolute;
            width: 720px;
            margin-left: 20px;
            margin-top: 225px;
        }
    }

    .direction
    {
        display: flex;
        flex-direction: column;
    }

    #buttons
    {
        display: flex;
        flex-direction: column;
    }

    @@media screen and (max-width: 990px) 
    {
        #buttons
        {
            display: inline;
            margin-top: 50px;
            margin-left: 50px;
        }

        a
        {
            text-decoration: none;
        }
    }
</style>

<br>
<br>

@foreach (var item in Model) {

    <div class="order">
        <div>
            <img id="image" src="@Html.DisplayFor(modelItem => item.Presents.Image)" />
        </div>
        <div class="orderText">
            <div class="direction">
                <b>Име</b>
                @Html.DisplayFor(modelItem => item.Presents.Name)
            </div>
            <div class="direction">
                <b>Username</b>
                @Html.DisplayFor(modelItem => item.Clietns.UserName)
            </div>
            <div class="direction">
                <b>Количество</b>
                @Html.DisplayFor(modelItem => item.Quantity)
            </div>
            <div class="direction">
                <b>Дата</b>
                @Html.DisplayFor(modelItem => item.DateUpdate)
            </div>
            <div class="direction">
                <b>Обща цена</b>
                @(item.Presents.Price * item.Quantity) лв.
            </div>
        </div>
        <div id="buttons">
            <a asp-action="Edit" asp-route-id="@item.Id">
                <button class="buttonEdit">Промени</button>
            </a>
            <a asp-action="Delete" asp-route-id="@item.Id">
                <button class="buttonDel">Премахни</button>
            </a>
        </div>
    </div>
    <br>
}
<br>
<br>
