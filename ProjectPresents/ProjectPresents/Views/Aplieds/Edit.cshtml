@model ProjectPresents.Data.Aplied

@{
    ViewData["Title"] = "Edit";
}

<style>
    body 
    {
        background: linear-gradient(180deg, rgba(255,255,255,1) 0%, gold 100%);
        font-family: 'Comic Sans MS';
    }
    .buttonBack 
    {
        width: 180px;
        height: 60px;
        border-radius: 8px;
        background-color: lightskyblue;
        transition: all 0.2s ease-out;
    }
    .buttonBack:hover 
    {
        background-color: deepskyblue;
        color: white;
        transition: all 0.2s ease-out;
    }
    .buttonEdit 
    {
        width: 180px;
        height: 60px;
        border-radius: 8px;
        background-color: lightskyblue;
        transition: all 0.2s ease-out;
    }
    .buttonEdit:hover 
    {
        background-color: deepskyblue;
        color: white;
        transition: all 0.2s ease-out;
    }
    .row 
    {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .form-control
    {
        border-radius: 6px;
    }
</style>

<br>
<h1 style="text-align: center">Промяна на приложение</h1>
<br>
<br>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br>
            <br>
            <div style="display: flex; justify-content: space-between">
                <a asp-action="Index"><input type="button" value="Предишна страница" class="buttonBack" /></a>
                <input type="submit" value="Промени" class="buttonEdit" />
            </div>
        </form>
    </div>
</div>
<br>
<br>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
