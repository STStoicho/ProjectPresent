@model ProjectPresents.Data.Aplied

@{
    ViewData["Title"] = "Създаване на приложение";
}

<style>
    body 
    {
        background: linear-gradient(180deg, rgba(255,255,255,1) 0%, gold 100%);
        font-family: 'Comic Sans MS';
    }

    .buttonBack 
    {
        width: 180px;
        height: 60px;
        border-radius: 8px;
        background-color: lightskyblue;
        transition: all 0.2s ease-out;
    }
    .buttonBack:hover 
    {
        background-color: deepskyblue;
        color: white;
        transition: all 0.2s ease-out;
    }
    .buttonCreate 
    {
        width: 180px;
        height: 60px;
        border-radius: 8px;
        background-color: lightskyblue;
        transition: all 0.2s ease-out;
    }
    .buttonCreate:hover 
    {
        background-color: deepskyblue;
        color: white;
        transition: all 0.2s ease-out;
    }
    .row 
    {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .form-control 
    {
        border-radius: 6px;
    }

    #buttons
    {
        display: flex;
        justify-content: space-between;

    }

    @@media screen and (max-width: 1200px) 
    {
        #buttons 
        {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
    }
    @@media screen and (max-width: 770px) 
    {
        #buttons 
        {
            display: flex;
            flex-direction: row;
        }
    }
</style>

<br>
<h1 style="text-align: center">Създаване на новo приложение</h1>
<br>
<br>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Име</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br>
            <br>
            <div id="buttons">
                <a asp-action="Index"><input type="button" value="Предишна страница" class="buttonBack" /></a>
                <input type="submit" value="Създаване" class="buttonCreate" />
            </div>
        </form>
    </div>
</div>
<br>
<br>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
