<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectPresents</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectPresents.styles.css" asp-append-version="true" />
</head>

<style>
    .social
    {
        text-decoration: none;
        transition: all 0.1s ease-out;
    }
    .social:active 
    {
        color: grey;
        transition: all 0.1s ease-out;
    }
    .social:active
    {
        color: grey;
        transition: all 0.1s ease-out;
    }
    .social:visited 
    {
        color: grey;
        transition: all 0.1s ease-out;
    }
    .social:hover 
    {
        color: black;
        transition: all 0.1s ease-out;
    }

    #textchange
    {
    }

    @@media screen and (max-width: 1410px) 
    {
        #textchange 
        {
            font-size: 12px;
        }
    }

    .menubox
    {
        background-color: white;
        transition: all 0.1s ease-out;
        border-radius: 4px;
    }
    .menubox:hover
    {
        background-color: lightgray;
        transition: all 0.1s ease-out;
    }
    .dropbtn 
    {
        border-radius: 6px;
        background-color: white;
        color: black;
        padding: 8px;
        font-size: 16px;
        border: none;
        transition: all 0.1s ease-out;
    }
    .dropdown 
    {
        position: relative;
        display: inline-block;
        transition: all 0.1s ease-out;
    }
    .dropdown-content 
    {
        border-radius: 6px;
        display: none;
        position: absolute;
        background-color: #f1f1f1;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
        transition: all 0.1s ease-out;
    }
    .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
        transition: all 0.1s ease-out;
        border-radius: 6px;
    }
    .dropdown-content a:hover {
        background-color: lightgray;
        transition: all 0.1s ease-out;
    }
    .dropdown:hover .dropdown-content {
        display: block;
        transition: all 0.1s ease-out;
    }
    .dropdown:hover .dropbtn {
        background-color: lightgray;
        transition: all 0.1s ease-out;
    }
</style>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img width="150px" id="logo" src="~/logo.png" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="menubox">
                            <a id="textchange" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">За нас</a>
                        </li>
                        <li>
                            <div class="dropdown">
                                <button id="textchange" class="dropbtn">Категории</button>
                                <div class="dropdown-content">
                                    <a asp-area="" asp-controller="Presents" asp-action="Index" asp-route-category="1">Категория 1</a>
                                    <a asp-area="" asp-controller="Presents" asp-action="Index" asp-route-category="2">Категория 2</a>
                                    <a asp-area="" asp-controller="Presents" asp-action="Index" asp-route-category="3">Категория 3</a>
                                </div>
                            </div>
                        </li>
                        <li class="menubox">
                            <a id="textchange" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Обратна връзка</a>
                        </li>
                        <li class="menubox">
                            <a id="textchange" class="nav-link text-dark" asp-area="" asp-controller="Presents" asp-action="Index">Подаръци</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="menubox">
                                <a id="textchange" class="nav-link text-dark" asp-area="" asp-controller="Categories" asp-action="Index">Категории</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="menubox">
                                <a id="textchange" class="nav-link text-dark" asp-area="" asp-controller="Aplieds" asp-action="Index">Приложения</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>

    <footer style="background-color: ghostwhite" class="footer text-muted">
        <div class="container">
            <div style="display: flex; flex-direction: row; justify-content: space-between">
                <div style="display: flex; flex-direction: column">
                    <b style="font-size: 22px">Потърсете ни тук:</b>
                    <a class="social" href="https://instagram.com"><img width="55" src="https://cdn4.iconfinder.com/data/icons/picons-social/57/38-instagram-2-512.png" /> Instagram</a>
                    <a class="social" href="https://www.facebook.com"><img width="55" src="https://seeklogo.com/images/F/facebook-icon-black-logo-133935095E-seeklogo.com.png" /> Facebook</a>
                </div>
                <div style="display: flex; flex-direction: column">
                    <b style="font-size: 22px">Контакти:</b>
                    <div style="font-size: 18px"><b>Email: </b>iznenadabuisness@gmail.com</div>
                    <div style="font-size: 18px"><b>Телефон: </b>0897592588</div>
                </div>
            </div>
            &copy; 2024 - Магазин за подаръци "Изненада"
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
